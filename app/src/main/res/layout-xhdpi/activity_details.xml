<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetailsActivity"
    android:background="@color/colorPrimaryFade">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorWhiteFade"
            app:expandedTitleMarginEnd="@dimen/expand_title_margin"
            app:expandedTitleMarginBottom="@dimen/margin_vertical_16dp"
            app:expandedTitleMarginStart="@dimen/expand_title_margin_start"
            app:expandedTitleTextAppearance="@style/ExpandedToolbar"
            app:collapsedTitleTextAppearance="@style/CollapsedToolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/poster_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/toolbar_backdrop_image" />
            <View
                android:id="@+id/scrim_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_scrim"
                android:layout_gravity="bottom"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroller"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:behavior_overlapTop="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.thebaileybrew.flix.DetailsActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginStart="125dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/movie_tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:textSize="@dimen/text_20sp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center_horizontal"
                tools:text="An entire universe. Once and for all."/>
            <View
                android:id="@+id/synopsis_guideline"
                app:layout_constraintLeft_toLeftOf="@id/movie_tagline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_genres"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_horizontal_16dp"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:layout_height="@dimen/half_margin_vertical_4dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:id="@+id/movie_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:layout_marginStart="@dimen/margin_horizontal_16dp"
                app:layout_constraintTop_toBottomOf="@id/genre_guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/movie_tagline"
                android:textSize="@dimen/standard_xhdpi_text16sp"
                android:textColor="@color/colorPrimaryText"
                android:maxLines="2"
                tools:text="These are genres"/>
            <View
                android:id="@+id/genre_guideline"
                app:layout_constraintLeft_toLeftOf="@id/movie_tagline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_tagline"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/margin_horizontal_16dp"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:layout_height="@dimen/half_margin_vertical_4dp"
                android:background="@color/colorAccent"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                app:layout_constraintTop_toBottomOf="@id/synopsis_guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/movie_tagline"
                android:layout_marginStart="@dimen/margin_horizontal_16dp">

                <TextView
                    android:id="@+id/synopsis_text"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/standard_xhdpi_text16sp"
                    android:textColor="@color/colorPrimaryText"
                    tools:text="@string/lorem_ipsum"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/credits_recycler"
                    android:paddingTop="@dimen/half_margin_vertical_4dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/synopsis_text"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/no_credits_view"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textSize="26sp"
        android:textColor="@color/colorPrimaryText"
        android:gravity="center"
        app:layout_anchor="@id/nested_scroller"
        app:layout_anchorGravity="bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/margin_horizontal_8dp"
        android:layout_marginRight="@dimen/margin_horizontal_8dp"
        android:layout_marginTop="20dp"
        android:id="@+id/linear_layout_headers_details"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/poster"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_16dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorWhiteWash"
            android:text="@string/runtime"/>
        <TextView
            android:id="@+id/movie_runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/half_margin_vertical_4dp"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryText"
            tools:text="1 hr 42 min"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_16dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorWhiteWash"
            android:text="@string/release_date"/>
        <TextView
            android:id="@+id/movie_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/half_margin_vertical_4dp"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryText"
            tools:text="01/01/2018"/>
        <TextView
            android:id="@+id/rating_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_16dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/colorWhiteWash"
            android:text="@string/average_rating"/>
        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/half_margin_vertical_4dp"
            android:textSize="22sp"
            android:textColor="@color/colorPrimaryText"
            tools:text="8.5"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/poster"
        android:layout_width="140dp"
        android:layout_height="210dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_vertical"
        app:layout_anchor="@id/app_toolbar"
        app:layout_anchorGravity="start|bottom"
        android:layout_marginStart="12dp"
        android:paddingTop="@dimen/margin_vertical_8dp"
        android:paddingBottom="32dp"
        android:padding="@dimen/half_margin_vertical_4dp"
        android:elevation="@dimen/half_margin_vertical_4dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/movie_poster" />
    <com.thebaileybrew.flix2.interfaces.adapters.StaticProgressBar
        android:id="@+id/progress"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_anchor="@id/poster"
        android:visibility="invisible"
        app:layout_anchorGravity="bottom|center"
        android:layout_gravity="center_horizontal"
        app:arc_stroke_width="12dp"
        app:arc_text_size="54sp"
        app:arc_bottom_text_size="14sp"
        app:arc_bottom_text="RATING"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>