<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:ratingBarStyle">@style/RatingBarTheme</item>
    </style>

    <style name="RatingBarTheme" parent="Widget.AppCompat.RatingBar">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="ExpandedToolbar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/colorToolbarExpanded</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="CollapsedToolbar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/colorToolbarCollapsed</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
