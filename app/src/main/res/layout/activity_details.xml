<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetailsActivity"
    android:background="@color/colorPrimaryFade">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorWhiteFade"
            app:expandedTitleMarginEnd="@dimen/expand_title_margin"
            app:expandedTitleMarginBottom="@dimen/margin_vertical_32dp"
            app:expandedTitleMarginStart="@dimen/expand_title_margin_start"
            app:expandedTitleTextAppearance="@style/ExpandedToolbar"
            app:collapsedTitleTextAppearance="@style/CollapsedToolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/poster_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/toolbar_backdrop_image" />
            <View
                android:id="@+id/scrim_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_scrim"
                android:layout_gravity="bottom"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginStart="@dimen/margin_horizontal_8dp"
        android:layout_marginEnd="@dimen/margin_horizontal_8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="true"
        android:layout_marginBottom="?android:actionBarSize"
        android:layout_marginStart="130dp">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/pager_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryFade"
            android:elevation="@dimen/card_elevation_6dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tabRippleColor="@color/colorWhiteWash"
            app:tabBackground="@color/colorPrimaryFade"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            style="@style/PagerTabs" />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_viewpager"
            android:nestedScrollingEnabled="true"
            app:layout_constraintTop_toBottomOf="@id/pager_tabs"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="?android:actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_marginLeft="@dimen/margin_horizontal_8dp"
        android:layout_marginRight="@dimen/margin_horizontal_8dp"
        android:layout_marginTop="20dp"
        android:id="@+id/linear_layout_headers_details"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/poster"
        app:layout_anchorGravity="bottom"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_16dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_standard_18sp"
            android:textColor="@color/colorWhiteWash"
            android:text="@string/runtime"/>
        <TextView
            android:id="@+id/movie_runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/half_margin_vertical_4dp"
            android:textSize="@dimen/text_standard_18sp"
            android:textColor="@color/colorPrimaryText"
            tools:text="1 hr 42 min"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical_16dp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="@dimen/text_standard_18sp"
            android:textColor="@color/colorWhiteWash"
            android:text="@string/release_date"/>
        <TextView
            android:id="@+id/movie_release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/half_margin_vertical_4dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            tools:text="01/01/2018"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/poster"
        android:layout_width="120dp"
        android:layout_height="210dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_vertical"
        app:layout_anchor="@id/app_toolbar"
        app:layout_anchorGravity="start|bottom"
        android:layout_marginStart="12dp"
        android:elevation="@dimen/half_margin_vertical_4dp"
        android:contentDescription="@string/movie_poster"
        android:clickable="false"
        android:focusable="false"/>
    <com.thebaileybrew.flix2.utils.objects.StaticProgressBar
        android:id="@+id/progress"
        android:layout_width="115dp"
        android:layout_height="115dp"
        app:layout_anchor="@id/poster"
        android:visibility="invisible"
        app:layout_anchorGravity="bottom|center"
        android:layout_gravity="center_horizontal"
        app:arc_stroke_width="12dp"
        app:arc_text_size="54sp"
        app:arc_bottom_text_size="14sp"
        app:arc_bottom_text="RATING"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_marginRight="16dp"
        app:fabSize="normal"
        android:src="@drawable/ic_star"
        android:scaleType="center"
        app:layout_anchor="@id/app_toolbar"
        app:layout_behavior="com.thebaileybrew.flix2.utils.behaviors.FloatingActionButtonUtils"
        app:rippleColor="@color/colorFavorite"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>